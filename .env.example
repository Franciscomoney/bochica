# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Polkadot Public RPC Endpoints
NEXT_PUBLIC_ASSET_HUB_WSS=wss://polkadot-asset-hub-rpc.polkadot.io
NEXT_PUBLIC_MOONBEAM_WSS=wss://wss.api.moonbeam.network

# Platform Configuration
NEXT_PUBLIC_PLATFORM_FEE=0.02
NEXT_PUBLIC_LOAN_INTEREST_RATE=0.05

# USDT Asset ID on Polkadot Asset Hub
NEXT_PUBLIC_USDT_ASSET_ID=1984

# Admin Dashboard Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
NEXT_PUBLIC_ADMIN_SESSION_SECRET=change-this-to-random-secret-in-production

# Bochica Platform Commission Wallet (Polkadot Asset Hub)
# Replace with your actual platform wallet address
NEXT_PUBLIC_BOCHICA_WALLET=5EXAMPLE_PLATFORM_WALLET_ADDRESS_PLACEHOLDER

# Bochica Project Escrow Wallet (holds committed funds until project funded)
# Replace with your actual escrow wallet address
NEXT_PUBLIC_PROJECT_ESCROW_WALLET=5EXAMPLE_ESCROW_WALLET_ADDRESS_PLACEHOLDER
